

FIND_SUM MACRO ARR, N
	LOCAL L1
	PUSH SI
	PUSH CX

	MOV CX, N
	XOR SI, SI
	XOR AX, AX
L1:
	ADD AX, ARR[SI]
	;ADC AH, 0
	ADD SI, 2
	LOOP L1

	POP CX
	POP SI

ENDM


CREATE_ARRAY MACRO ARR, N
	LOCAL L2
	PUSH CX
	PUSH SI

	XOR SI, SI
	MOV CX, N
L1:	
	MOV ARR[SI], CX
	ADD SI, 2
	LOOP L1

	POP SI
	POP CX
ENDM

